<%- include("partials/header") -%>

  <div class="container">
    <h2>Our Popular Blogs</h2>

   <!-- Inside Home.ejs -->
<% NewPosts.forEach((post) => { %>
  <div class="blog-card">
    <% if (post.Image && post.Image.buffer) { %>
      <div class="thumbnail">
    <img src="data:image/jpeg;base64,<%= post.Image.buffer.toString('base64') %>" alt="Blog Image">
  </div>
    <% } %>
  
    <div class="content">
       <h2> <%= post.title %></h2>
    <p><%= post.content.substring(0,200)+"..." %><a href="/posts/<%= post.title %>">Read more</a></p>
  </div>
  </div>
<% }) %>


  </div>







